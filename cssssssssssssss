    text-align: center;
}

img {
    max-width: 100%; /* evita desbordes */
    height: auto;
}

.container {
    display: grid;
    grid-template-columns: 1fr;   /* 1 columna por defecto */
    gap: 20px;
    background-color: rgb(252, 188, 69);     /* fondo móviles */     /* bordes móviles */
